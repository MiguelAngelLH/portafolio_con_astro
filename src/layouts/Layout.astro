---
import "../styles/global.css";
import Navbar from "../components/commons/navbar/navbar.astro";
import Footer from "../components/commons/footer/footer.astro";

import {
  construirTitulo,
  DESCRIPCION_SITIO,
  NOMBRE_SITIO,
} from "../data/titulosPaginas";

export interface Props {
  /** Título corto de la página (ej: "Sobre mí"). */
  tituloPagina?: string;
  /** Compatibilidad con uso existente: <Layout title="..." /> */
  title?: string;
  description?: string;
  noindex?: boolean;
}

const { tituloPagina, title, description, noindex } = Astro.props;

const baseTitle = tituloPagina ?? title;
const fullTitle = baseTitle
  ? baseTitle.includes("/")
    ? baseTitle
    : construirTitulo(baseTitle)
  : NOMBRE_SITIO;

const metaDescription = description ?? DESCRIPCION_SITIO;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    <meta name="description" content={metaDescription} />
    {noindex ? <meta name="robots" content="noindex, nofollow" /> : null}
  </head>
  <body class="bg-gray-950 text-white">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
